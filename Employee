import java.text.NumberFormat;
import java.util.Locale;

 class Employee {
    // Private instance variables
    private int employee_id;
    private String employee_name;
    private double employee_salary;
    
    // Constructor
    public Employee(int id, String name, double salary) {
        this.employee_id = id;
        this.employee_name = name;
        this.employee_salary = salary;
    }
    
    // Getter and setter for employee_id
    public int getEmployeeId() {
        return employee_id;
    }
    
    public void setEmployeeId(int employee_id) {
        if (employee_id > 0) {
            this.employee_id = employee_id;
        } else {
            System.out.println("Error: Employee ID must be positive.");
        }
    }
    
    // Getter and setter for employee_name
    public String getEmployeeName() {
        return employee_name;
    }
    
    public void setEmployeeName(String employee_name) {
        if (employee_name != null && !employee_name.trim().isEmpty()) {
            this.employee_name = employee_name;
        } else {
            System.out.println("Error: Employee name cannot be empty.");
        }
    }
    
    // Getter only for employee_salary with formatted string
    public String getEmployeeSalary() {
        // Format salary as currency
        NumberFormat currencyFormat = NumberFormat.getCurrencyInstance(Locale.US);
        return currencyFormat.format(employee_salary);
    }
    
    // Additional Feature 1: Calculate annual bonus (10% of salary)
    public String calculateAnnualBonus() {
        double bonus = employee_salary * 0.10;
        NumberFormat currencyFormat = NumberFormat.getCurrencyInstance(Locale.US);
        return currencyFormat.format(bonus);
    }
    
    // Additional Feature 2: Check if employee is eligible for promotion
    public String checkPromotionEligibility(int yearsOfService) {
        if (yearsOfService >= 3 && employee_salary < 80000) {
            return "Eligible for promotion";
        } else if (yearsOfService >= 5) {
            return "Eligible for promotion (seniority)";
        } else {
            return "Not eligible for promotion yet";
        }
    }
    
    // Method to display employee information
    public void displayEmployeeInfo(int yearsOfService) {
        System.out.println("\n=== Employee Information ===");
        System.out.println("Employee ID: " + employee_id);
        System.out.println("Employee Name: " + employee_name);
        System.out.println("Employee Salary: " + getEmployeeSalary());
        System.out.println("Annual Bonus: " + calculateAnnualBonus());
        System.out.println("Promotion Status: " + checkPromotionEligibility(yearsOfService));
    }
}

// Main class to test Employee
public class EmployeeTest {
    public static void main(String[] args) {
        // Create Employee objects
        Employee emp1 = new Employee(101, "John Smith", 65000.50);
        Employee emp2 = new Employee(102, "Sarah Johnson", 85000.75);
        
        // Display initial employee information
        emp1.displayEmployeeInfo(4);
        emp2.displayEmployeeInfo(2);
        
        // Demonstrate encapsulation by using setters
        System.out.println("\n=== Testing Encapsulation ===");
        
        // Modify employee details using setter methods
        emp1.setEmployeeName("Johnathan Smith");
        emp1.setEmployeeId(201); // Valid change
        
        // Try invalid updates
        emp1.setEmployeeId(-5); // Should show error
        emp1.setEmployeeName(""); // Should show error
        
        // Display updated information
        emp1.displayEmployeeInfo(4);
        
        // Demonstrate abstraction - we can get formatted salary without knowing implementation details
        System.out.println("\n=== Testing Abstraction ===");
        System.out.println("Employee 1 Salary (formatted): " + emp1.getEmployeeSalary());
        System.out.println("Employee 2 Salary (formatted): " + emp2.getEmployeeSalary());
    }
}